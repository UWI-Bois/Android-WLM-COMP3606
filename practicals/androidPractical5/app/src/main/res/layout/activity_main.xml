<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background=" #000000"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/riddle_et"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="300dp"
        android:background=" #3f3f3f"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/riddle"
        android:inputType="textMultiLine"
        android:textColor="#FFAB00"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/phoneno_et"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/phoneno_et"
        app:layout_constraintTop_toBottomOf="@+id/phoneno_et"
        app:layout_constraintVertical_bias="0.0"
        android:autofillHints="" />

    <EditText
        android:id="@+id/phoneno_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background=" #3f3f3f"
        android:ems="10"
        android:hint="@string/phone_number"
        android:inputType="phone"
        android:text="@string/_15555215556"
        android:textColor="#00BFA5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="" />

    <EditText
        android:id="@+id/solution_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:autofillHints=""
        android:background=" #3f3f3f"
        android:ems="10"
        android:hint="@string/solution"
        android:inputType="textPersonName"
        android:textColor="#FF6D00"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/riddle_et"
        app:layout_constraintStart_toStartOf="@+id/riddle_et"
        app:layout_constraintTop_toBottomOf="@+id/riddle_et" />

    <Button
        android:id="@+id/send"
        style="@android:style/Widget.Button.Toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background=" #3f3f3f"
        android:text="@string/send_riddle"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#00C853"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/solution_et"
        app:layout_constraintTop_toBottomOf="@+id/solution_et" />

    <Button
        android:id="@+id/respBtn"
        style="@android:style/Widget.Button.Toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background=" #3f3f3f"
        android:text="View Responses"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#00C853"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/solution_et"
        app:layout_constraintTop_toBottomOf="@+id/solution_et" />

</androidx.constraintlayout.widget.ConstraintLayout>