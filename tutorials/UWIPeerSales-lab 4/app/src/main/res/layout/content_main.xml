<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	app:layout_behavior="@string/appbar_scrolling_view_behavior"
	tools:context="edu.uwi.sta.uwipeersales.Main"
	tools:showIn="@layout/activity_main">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="UWI Peer Sales"
		android:id="@+id/main_heading"
		android:layout_below="@+id/main_img"
		android:layout_centerHorizontal="true"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:text="Enabling Empowerment Through Sales"
		android:id="@+id/main_subheading"
		android:layout_below="@+id/main_heading"
		android:layout_centerHorizontal="true"/>

	<ImageView
		android:layout_width="150dp"
		android:layout_height="150dp"
		android:id="@+id/main_img"
		android:src="@drawable/things_icon"
		android:layout_alignParentTop="true"
		android:layout_alignStart="@+id/main_heading"/>

	<Button
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		android:text="View Items"
		android:id="@+id/btn_view"
		android:layout_centerVertical="true"
		android:layout_centerHorizontal="true"
		android:onClick="viewList"/>

	<Button
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		android:text="View Cart"
		android:id="@+id/btn_cart"
		android:layout_below="@+id/btn_view"
		android:layout_centerHorizontal="true"
		android:onClick="viewCart"/>
</RelativeLayout>
